<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.kipia.management.kipia_management.controllers.AddDeviceController"
      spacing="10" style="-fx-padding: 15;">

    <Label text="Добавление нового прибора" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Наименование:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Тип:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="typeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Инвентарный номер:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="inventoryNumberField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Местонахождение:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="locationField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Статус:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Отмена" onAction="#onCancel"/>
        <Button text="Добавить" onAction="#onAddDevice"/>
    </HBox>

    <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
</VBox>