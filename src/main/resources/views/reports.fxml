<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Tooltip?>
<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.kipia.management.kipia_management.controllers.ReportsController"
      spacing="20" styleClass="reports-root">
    <fx:define>
        <ToggleGroup fx:id="reportTypeGroup"/> <!-- ToggleGroup для выбора типа отчета -->
    </fx:define>

    <!-- 1️⃣ РАДИО-КНОПКИ ОТЧЕТОВ ПО КАТЕГОРИЯМ -->
    <HBox spacing="20" styleClass="report-buttons">
        <RadioButton text="По статусу" toggleGroup="$reportTypeGroup" fx:id="statusReportBtn" selected="true" styleClass="report-radio"/>
        <RadioButton text="По типам приборов" toggleGroup="$reportTypeGroup" fx:id="typeReportBtn" styleClass="report-radio"/>
        <RadioButton text="По производителям" toggleGroup="$reportTypeGroup" fx:id="manufacturerReportBtn" styleClass="report-radio"/>
        <RadioButton text="По местоположению" toggleGroup="$reportTypeGroup" fx:id="locationReportBtn" styleClass="report-radio"/>
        <RadioButton text="По годам выпуска" toggleGroup="$reportTypeGroup" fx:id="yearReportBtn" styleClass="report-radio"/>
    </HBox>

    <!-- 2️ HBox с заголовком отчета и кнопка экспорта -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="titleLabel" text="Отчёт по устройствам — По статусу" styleClass="report-title"/>
        <!-- Кнопка экспорта отчета в Excel -->
        <Button fx:id="exportReportButton" styleClass="report-export-button">
            <graphic>
                <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                    <Image url="@../images/export.png"/>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="Экспортировать отчёт в Excel"/>
            </tooltip>
        </Button>
    </HBox>

    <!-- BorderPane с графиком -->
    <BorderPane fx:id="chartPane" prefWidth="600" prefHeight="400" styleClass="chart-pane"/>
</VBox>