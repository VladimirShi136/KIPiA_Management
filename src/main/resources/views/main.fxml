<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kipia.management.kipia_management.controllers.MainController">

    <!--  ── Верхняя панель ──  -->
    <top>
        <HBox fx:id="top" alignment="CENTER" styleClass="top">
            <Label fx:id="headerLabel"
                   text="Учёт приборов КИПиА"
                   styleClass="header-label"/>
        </HBox>
    </top>

    <!--  ── Левая панель (меню) ──  -->
    <left>
        <VBox fx:id="left" spacing="10" styleClass="left">
            <Button fx:id="devicesBtn"
                    maxWidth="Infinity"
                    onAction="#showDevices"
                    styleClass="nav-button button-devices"
                    text="Приборы"/>
            <Button fx:id="groupedDevicesBtn"
                    maxWidth="Infinity"
                    onAction="#showGroupedDevices"
                    text="Приборы по месту установки"
                    styleClass="nav-button button-grouped"/>
            <Button fx:id="addDeviceBtn"
                    maxWidth="Infinity"
                    onAction="#showAddDeviceForm"
                    styleClass="nav-button button-add-device"
                    text="Добавить прибор"/>
            <Button fx:id="reportsBtn"
                    maxWidth="Infinity"
                    onAction="#showReports"
                    styleClass="nav-button button-reports"
                    text="Отчёты"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button fx:id="themeToggleBtn"
                    maxWidth="Infinity"
                    onAction="#toggleTheme"
                    styleClass="nav-button button-theme-toggle"
                    text="Тёмная тема"/>
            <Button fx:id="exitBtn"
                    maxWidth="Infinity"
                    onAction="#exitApp"
                    styleClass="nav-button button-exit"
                    text="Выход"/>
        </VBox>
    </left>

    <!--  ── Центральная часть ──  -->
    <!--  Здесь будет динамически подставляться view‑контент,
          например, таблица приборов, форма добавления, отчёты и т.п.  -->
    <center>
        <VBox fx:id="contentArea" spacing="15"/>
    </center>

    <!--  ── Нижняя панель (статус) ──  -->
    <bottom>
        <HBox fx:id="bottom"
              alignment="CENTER_LEFT"
              styleClass="bottom">
            <Label fx:id="statusLabel"
                   text="Готов к работе"
                   styleClass="status-label"/>
        </HBox>
    </bottom>
</BorderPane>