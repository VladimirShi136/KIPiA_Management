<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<!--
  Author: vladimir_shi
  Since: 24.08.2025
  * Главное окно *
-->

<BorderPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kipia.management.kipia_management.controllers.MainController">

    <!-- 1️⃣ ── Верхняя панель ──  -->
    <top>
        <HBox alignment="CENTER" styleClass="top">
            <Label text="Учёт приборов КИПиА" styleClass="header-label"/>
        </HBox>
    </top>

    <!-- 2️⃣ ── Левая панель (меню) ──  -->
    <left>
        <VBox spacing="10" styleClass="left">
            <Button fx:id="devicesBtn"
                    maxWidth="Infinity"
                    onAction="#showDevices"
                    styleClass="button-devices"
                    text="Приборы"/>
            <Button fx:id="groupedDevicesBtn"
                    maxWidth="Infinity"
                    onAction="#showGroupedDevices"
                    text="Приборы по месту установки"
                    styleClass="button-grouped"/>
            <Button fx:id="schemesBtn"
                    maxWidth="Infinity"
                    onAction="#showSchemesEditor"
                    text="Схемы локаций установки"
                    styleClass="button-schemes"/>
            <Button fx:id="addDeviceBtn"
                    maxWidth="Infinity"
                    onAction="#showAddDeviceForm"
                    styleClass="button-add-device"
                    text="Добавить прибор"/>
            <Button fx:id="reportsBtn"
                    maxWidth="Infinity"
                    onAction="#showReports"
                    styleClass="button-reports"
                    text="Отчёты"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button fx:id="themeToggleBtn"
                    maxWidth="Infinity"
                    onAction="#toggleTheme"
                    styleClass="button-theme-toggle"
                    text="Тёмная тема"/>
            <Button fx:id="exitBtn"
                    maxWidth="Infinity"
                    onAction="#exitApp"
                    styleClass="button-exit"
                    text="Выход"/>
        </VBox>
    </left>

    <!-- 3️⃣ ── Центральная часть ──  -->
    <!--  Здесь динамически подставляется view‑контент,
          например, таблица приборов, форма добавления, отчёты и т.п.  -->
    <center>
        <VBox fx:id="contentArea" spacing="15"/>
    </center>

    <!-- 4️⃣ ── Нижняя панель (статус) ──  -->
    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="bottom">
            <Label fx:id="statusLabel" text="Готов к работе" styleClass="status-label"/>
        </HBox>
    </bottom>
</BorderPane>