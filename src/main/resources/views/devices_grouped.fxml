<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.kipia.management.kipia_management.controllers.DevicesGroupedController"
      spacing="10" prefWidth="1000" prefHeight="700">

    <!-- 1️⃣ ПАНЕЛЬ ПОИСКА И УДАЛЕНИЯ -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Поиск:" styleClass="search-label"/>
        <TextField fx:id="searchField"
                   promptText="Введите текст для поиска"
                   styleClass="search-field"/>
        <!-- Кнопка удаления -->
        <Button fx:id="deleteButton" styleClass="button-delete">
            <graphic>
                <ImageView fitWidth="24" fitHeight="24" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/delete.png"/>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="Удалить выбранный прибор"/>
            </tooltip>
        </Button>
        <!-- Кнопки импорта и экспорта -->
        <Button fx:id="exportButton" styleClass="button-export">
            <graphic>
                <ImageView fitWidth="24" fitHeight="24" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/export.png"/>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="Экспорт в Excel"/>
            </tooltip>
        </Button>
        <Button fx:id="importButton" styleClass="button-import">
            <graphic>
                <ImageView fitWidth="24" fitHeight="24" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/import.png"/>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="Импорт из Excel"/>
            </tooltip>
        </Button>
    </HBox>

    <!-- 2️⃣ СТАТИСТИКА -->
    <VBox styleClass="statistics-pane" spacing="5">
        <Label text="Статистика:" styleClass="statistics-header"/>
        <HBox spacing="20" styleClass="statistics-data">
            <VBox alignment="CENTER">
                <Label fx:id="totalDevicesLabel" text="--" styleClass="stat-total"/>
                <Label text="Всего приборов" styleClass="stat-label"/>
            </VBox>
            <VBox alignment="CENTER">
                <Label fx:id="workingDevicesLabel" text="--" styleClass="stat-working"/>
                <Label text="В работе" styleClass="stat-label"/>
            </VBox>
            <VBox alignment="CENTER">
                <Label fx:id="storageDevicesLabel" text="--" styleClass="stat-storage"/>
                <Label text="Хранение" styleClass="stat-label"/>
            </VBox>
            <VBox alignment="CENTER">
                <Label fx:id="lostDevicesLabel" text="--" styleClass="stat-lost"/>
                <Label text="Утерян" styleClass="stat-label"/>
            </VBox>
            <VBox alignment="CENTER">
                <Label fx:id="brokenDevicesLabel" text="--" styleClass="stat-broken"/>
                <Label text="Испорчен" styleClass="stat-label"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- 3️⃣ ГРУППИРОВАННАЯ ТАБЛИЦА ПРИБОРОВ -->
    <TreeTableView fx:id="treeTable" editable="true" VBox.vgrow="always" prefHeight="500" prefWidth="980"/>
</VBox>